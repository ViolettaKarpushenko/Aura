@model EcologicalViewModel

@{
    ViewBag.TabId = 7;
    ViewBag.SubTabId = 4;
    ViewBag.Title = "Экологическое состояние - Трансформация водосбора";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="view-table-assessment" calculate="simple">
    <div>
        <div class="grid-container">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Группы земель</th>
                        <th>Значение весового коэффициента</th>
                        <th>Степень антропогенного воздействия</th>
                        <th>Площадь земель, га</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DataSets[0])
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td class="value1">@item.Value</td>
                            <td>@item.AlterName</td>
                            <td class="value2">
                                <div class="control-group">
                                    <input type="text" value="0" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row-fluid">
            <div class="span3">
                <span>АТВ = <span class="index-label">1</span></span><br />
                <span>Нормированный балл = <span class="ball-label">1</span></span><br />
                <div class="progress progress-success">
                    <div class="bar" style="width: 20%"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        window.ecologicalTableAssessmentView = new EcologicalTableAssessmentView({
            normalizing: [
                { min: -1e15, max: 1.5, value: 1, color: "success", text: "минимальная" },
                { min: 1.5, max: 2, value: 2, color: "warning", text: "низкая" },
                { min: 2, max: 2.5, value: 3, color: "warning", text: "средняя" },
                { min: 2.5, max: 3, value: 4, color: "warning", text: "высокая" },
                { min: 3, max: 1e+15, value: 5, color: "danger", text: "максимальная" }
            ]
        });
    </script>
}
