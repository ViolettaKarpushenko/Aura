@model MineralViewModel

@{
    ViewBag.TabId = 3;
    ViewBag.SubTabId = 1;
    ViewBag.Title = "Использование - Балансовые запасы минеральных ресурсов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="text-center">
            <th>Район</th>
            <th>Разведанные запасы сапропелей, тыс. м куб</th>
            <th>Добыча сапропелей, тыс. м куб/год</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr rowid="@item.RegionId">
                <td>@item.RegionName</td>
                <td colid="@((int)MineralsColumns.Sapropel)" alter-update-action="@Url.Action("Update", "Stocks")">@item.Sapropel</td>
                <td colid="@((int)MineralsColumns.DobychaSapropel)">@item.DobychaSapropel</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript">initItemUpdate($, '@((int)Tables.Minerals)', '@Url.Action("Update", "Use")');</script>
}
