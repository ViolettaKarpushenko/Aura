@model BiologicalViewModel

@{
    ViewBag.TabId = 3;
    ViewBag.SubTabId = 4;
    ViewBag.Title = "Использование - Ресурсы растительного мира";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="table-view">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="text-center">
                <th>Район</th>
                <th>Промысловый запас макрофитов, т</th>
                <th>Заготовлено макрофитов, кг/год</th>
                <th>Сезонная биомасса фитопланктона, т</th>
                <th>Заготовлено фитопланктона, кг/год</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr rowid="@item.RegionId">
                    <td>@item.RegionName</td>
                    <td colid="@((int)BiologicalColumns.Makrofity)" alter-update-action="@Url.Action("Update", "Stocks")">@item.Makrofity</td>
                    <td colid="@((int)BiologicalColumns.ZagotovlenoMakrofitov)">@item.ZagotovlenoMakrofitov</td>
                    <td colid="@((int)BiologicalColumns.Fitoplankton)" alter-update-action="@Url.Action("Update", "Stocks")">@item.Fitoplankton</td>
                    <td colid="@((int)BiologicalColumns.ZagotovlenoFitoplankton)">@item.ZagotovlenoFitoplankton</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts
{
    <script type="text/javascript">
        window.tableView = new TableView({ tableId: '@((int)Tables.Biological)', url: '@Url.Action("Update", "Use")' });
    </script>
}
