@using System.Globalization
@using Aura.Web.Models

@model ResultsViewModel

@{
    ViewBag.TabId = 4;
    ViewBag.SubTabId = 5;
    ViewBag.Title = "Итог - Животного мира";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="text-center">
            <th>Район</th>
            <th>Запасы ПХГ</th>
            <th>Запасы озера</th>
            <th>%</th>
            <th>Коэффициент баланса</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr rowid="@item.RegionId">
                <td>@item.RegionName</td>
                <td>@(double.IsNaN(item.ZapasyPhg) ? string.Empty : item.ZapasyPhg.ToString("F3", CultureInfo.CurrentCulture)) </td>
                <td>@(double.IsNaN(item.ZapasyOzera) ? string.Empty : item.ZapasyOzera.ToString("F3", CultureInfo.CurrentCulture))</td>
                <td>@(double.IsNaN(item.Percent) ? string.Empty : item.Percent.ToString("P3", CultureInfo.CurrentCulture))</td>
                <td>@(double.IsNaN(item.KoefBalansa) ? string.Empty : item.KoefBalansa.ToString("F3", CultureInfo.CurrentCulture))</td>
            </tr>
        }
    </tbody>
</table>
