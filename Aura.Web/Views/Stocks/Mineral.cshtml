@using Aura.Web.Common
@using Aura.Web.Models

@model MineralViewModel

@{
    ViewBag.TabId = 2;
    ViewBag.SubTabId = 1;
    ViewBag.Title = "Запасы - Минеральные";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="text-center">
            <th>Район</th>
            <th>Доломиты</th>
            <th>Глинистые</th>
            <th>Пески</th>
            <th>Торф</th>
            <th>Гравийно песчаные породы</th>
            <th>Сапропель</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr rowid="@item.RegionId">
                <td>@item.RegionName</td>
                <td colid="@((int)MineralsColumns.Dolomity)">@item.Dolomity</td>
                <td colid="@((int)MineralsColumns.Glinistye)">@item.Glinistye</td>
                <td colid="@((int)MineralsColumns.Peski)">@item.Peski</td>
                <td colid="@((int)MineralsColumns.Torf)">@item.Torf</td>
                <td colid="@((int)MineralsColumns.GravinoPeschanye)">@item.GravinoPeschanye</td>
                <td colid="@((int)MineralsColumns.Sapropel)">@item.Sapropel</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript">initItemUpdate($, '@((int)Tables.Minerals)', '@Url.Action("Update", "Stocks")');</script>
}
